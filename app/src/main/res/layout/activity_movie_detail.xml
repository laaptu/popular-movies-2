<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".moviedetail.presentation.MovieDetailActivity">

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@color/green"
            android:gravity="center_vertical"
            android:paddingLeft="25dp"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Chappie" />

        <com.laaptu.popmovies.movieslist.presentation.AspectImageView
            android:id="@+id/img_thumb"
            android:layout_width="180dp"
            android:layout_height="190dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="15dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_title"
            tools:src="@drawable/ic_image_placeholder" />

        <TextView
            android:id="@+id/txt_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="15dp"
            android:textColor="@color/grey"
            android:textSize="23sp"
            app:layout_constraintLeft_toRightOf="@id/img_thumb"
            app:layout_constraintTop_toBottomOf="@id/txt_title"
            tools:text="2015" />

        <TextView
            android:id="@+id/txt_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="2dp"
            android:textColor="@color/grey"
            android:textSize="20sp"
            app:layout_constraintLeft_toRightOf="@id/img_thumb"
            app:layout_constraintTop_toBottomOf="@id/txt_year"
            tools:text="8/10" />

        <Button
            android:id="@+id/btn_reviews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="2dp"
            android:text="@string/reviews"
            app:layout_constraintLeft_toRightOf="@id/img_thumb"
            app:layout_constraintTop_toBottomOf="@id/txt_rating" />

        <ImageView
            android:id="@+id/img_favorite"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/ic_favorite"
            app:layout_constraintLeft_toRightOf="@id/img_thumb"
            app:layout_constraintTop_toBottomOf="@id/btn_reviews" />

        <TextView
            android:id="@+id/txt_summary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:paddingStart="25dp"
            android:paddingEnd="15dp"
            android:paddingBottom="20dp"
            android:textColor="@color/grey"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_thumb"
            app:layout_goneMarginEnd="20dp"
            tools:text="This is the plot summary of the movie. This is a great movie for all the genres" />

        <TextView
            android:id="@+id/txt_trailer_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="15dp"
            android:text="@string/trailers"
            android:textColor="@color/grey"
            android:textSize="19sp"
            android:visibility="invisible"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_summary" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_trailers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_trailer_title" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>